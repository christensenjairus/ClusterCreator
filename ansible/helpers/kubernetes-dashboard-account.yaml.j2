apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ kube_dashboard_user }}
  namespace: kubernetes-dashboard
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ kube_dashboard_user }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: {{ kube_dashboard_user }}
  namespace: kubernetes-dashboard
---
# long-lived token for the dashboard you could put in a password manager
apiVersion: v1
kind: Secret
metadata:
  name: {{ kube_dashboard_user }}
  namespace: kubernetes-dashboard
  annotations:
    kubernetes.io/service-account.name: {{ kube_dashboard_user }}
type: kubernetes.io/service-account-token